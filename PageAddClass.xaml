<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClassesStudentsMAUI.PageAddClass"
             Title="Thêm lớp mới">
    <VerticalStackLayout Padding="20" Spacing="15">
        <!-- Entry for Class ID -->
        <Entry x:Name="ClassIDEntry" Placeholder="Nhập mã lớp" Keyboard="Numeric" />

        <!-- Entry for Class Name -->
        <Entry x:Name="ClassNameEntry" Placeholder="Nhập tên lớp" />

        <!-- Save and Cancel Buttons -->
        <Button Text="Lưu" Clicked="OnSaveClicked" />
        <Button Text="Hủy" Clicked="OnCancelClicked" />
    </VerticalStackLayout>
</ContentPage>